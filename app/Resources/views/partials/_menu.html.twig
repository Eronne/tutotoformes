{% for page in pages %}
    <a class="{% if app.request.attributes.get('_route') == page %}active{% endif %} item">{{ page }}</a>
{% endfor %}
<div class="brand">
    <a href="{{ path('homepage') }}" class="item {{ route_name == "homepage" ? 'active' }}">{{ app_name }} {{ app.request.get('_internal') }}</a>
</div>

<div class="menu">
    <a href="" class="item {{ route_name == "tutoriel" ? 'active' }}">Tutoriels</a>
    {% if app.user and is_granted('ROLE_ADMIN') %}
        <a class="item {% if route_name starts with "admin" %}active{% endif %}" href="{{ path('admin_index') }}">Administration</a>
    {% endif %}
    {% if app.user %}
        <div class="item">
            <a href="" class="ui primary button">Mon profil</a>
        </div>
        <div class="item">
            <a href="{{ path('logout') }}" class="ui {% if inverted %}inverted{% endif %} button">Se d√©connecter</a>
        </div>

    {% else %}
        <div class="item login">
            <a href="{{ path('login') }}">Connexion / Inscription</a>
        </div>

    {% endif %}
</div>