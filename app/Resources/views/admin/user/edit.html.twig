{% embed "base.html.twig" with {sidebar: 0, title: "Éditer l'utilisateur " ~ user.username} %}
    {% block body %}
        <div class="jumbotron">
            <h1>Éditer l'utilisateur {{ user.username }}</h1>

        </div>
        <div class="container">
            <h2>Rôles</h2>
            <form action="" method="post">

                <table class="ui celled striped table">
                    <thead>
                    <tr>
                        <th></th>
                        <th>Nom</th>
                        <th>Description</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for role in roles %}
                        <tr>
                            <td>
                                <input type="checkbox" {% if user.explicitlyGranted(role.role) %}checked{% endif %} name="role[]" value="{{ role.id }}">
                            </td>
                            <td>{{ role.name }}</td>
                            <td>{{ role.description }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <button class="button primary medium" type="submit">Modifier</button>
            </form>

        </div>

    {% endblock %}
{% endembed %}