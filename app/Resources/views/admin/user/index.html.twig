{% embed 'base.html.twig' with {sidebar: 0, title: 'Administrer les utilisateurs'} %}

    {% block body %}
        <div class="container">
            <h1>Affichage des utilisateurs</h1>
            <table class="ui celled striped table">
                <thead>
                <tr>
                    <th>Pseudo</th>
                    <th>Email</th>
                    <th>Créée le</th>
                    <th>Dernière connexion</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email}}</td>
                        <td>{{ user.createdAt|date('d/m/Y') }}, à {{ user.createdAt|date('H:i:s') }}</td>
                        <td>{{ user.lastLogin|date('d/m/Y') }}, à {{ user.lastLogin|date('H:i:s') }}</td>
                        <td class="center">
                            <a class="button primary small" href="{{ path('admin_user_edit', {'username': user.username}) }}"><i class="fa fa-edit">&nbsp;&nbsp;</i>Éditer</a>
                            <a class="button danger small" href="{{ path('admin_user_delete', {'id': user.id}) }}"><i class="fa fa-times">&nbsp;&nbsp;</i>Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    {% endblock %}

{% endembed %}