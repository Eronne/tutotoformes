{% embed 'base.html.twig' with {title: tutoriel.title ~ ' - ' ~ page.title} %}
    {% set current_page_slug = app.request.attributes.get('slug_page')  %}

    {% block body %}
        <div class="container">
            <h1 class="tutoriel-title">{{ page.title }}</h1>
            <div class="page-slug" style="display: none;">{{ page.slug }}</div>
            <div class="grid has-gutter">
                <div class="sidebar">
                    <div class="page summary">
                        <a href="{{ path('tutoriel_summary_show', {'slug': tutoriel.slug}) }}"><i class="fa fa-home">&nbsp;&nbsp;</i>Retourner au sommaire</a>
                    </div>
                    {% for page in tutoriel.tutorialPages %}
                        {% set page_url = path('tutoriel_show', {'slug_page': page.slug, 'slug': tutoriel.slug}) %}
                        <div class="page {{ (current_page_slug == page.slug) ? 'active' }}">
                            {% if page.subparts|length > 0 %}<i class="fa fa-angle-right {{ (current_page_slug == page.slug) ? 'unfolded' }}">&nbsp;</i>{% endif %}
                            <a href="{{ page_url }}">{{ page.pageNumber ~ ' - ' ~ page.title }}</a>
                            {% if page.subparts|length > 0 %}
                                <div class="subpages {% if app.request.attributes.get('slug_page') == page.slug %}visible{% endif %}">
                                    {% for subpage in page.subparts %}
                                        <div class="subpage"><a {% if subpage.anchor_name is defined %}data-to="{{ subpage.anchor_name }}"{% endif %} href="{{ page_url }}{% if subpage.anchor_name is defined %}#{{ subpage.anchor_name }}{% endif %}">{{ loop.index ~ " - " ~ subpage.title }}</a></div>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
                <div class="tutoriel-content two-thirds">
                    {{ page.content|raw }}
                    <div class="navigation">
                        <div class="left">
                            {% if prev_page %}
                                <a href="{{ path('tutoriel_show', {'slug_page': prev_page.slug, 'slug': tutoriel.slug}) }}">
                                    <i class="fa fa-arrow-left"></i>&nbsp;&nbsp;{{ prev_page.title }}
                                </a>
                            {% else %}
                                <a href="{{ path('tutoriel_summary_show', {'slug': tutoriel.slug}) }}"><i class="fa fa-home">&nbsp;&nbsp;</i>Retourner au sommaire</a>
                            {% endif %}
                        </div>

                        <div class="right">
                            {% if next_page %}
                                <a href="{{ path('tutoriel_show', {'slug_page': next_page.slug, 'slug': tutoriel.slug}) }}">{{ next_page.title }}&nbsp;&nbsp;
                                    <i class="fa fa-arrow-right"></i></a>
                            {% endif %}
                        </div>

                    </div>
                    <div class="spacer"></div>
                    {% if app.user and ((is_granted('ROLE_WRITER') and app.user == tutoriel.author) or is_granted('ROLE_ADMIN')) %}
                        <a href="{{ path('admin_tutoriel_page_edit', {'id': tutoriel.id, 'slug_page': page.slug}) }}" class="button icon small secondary"><span class="icon"><i class="fa fa-edit"></i></span>Ã‰diter la page</a>
                    {% endif %}
                </div>
            </div>
            <div class="spacer"></div>
        </div>

    {% endblock %}
{% endembed %}