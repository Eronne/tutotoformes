<!DOCTYPE html>
<html>
<head>
    <!-- Standard Meta -->
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

    <!-- Site Properties -->
    <title>{% block title %}{{ app_name }} - {{ title|default('Accueil') }}{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('styles/normalize.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/css/font-awesome.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/animate.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    {% block stylesheets %}{% endblock %}


</head>
<body>

<header class="fixed">
    <nav class="main-nav">
        <div class="container">
            {{ render(controller('AppBundle:Default:menu')) }}
        </div>
    </nav>
</header>


{% if app.session.flashbag.peekAll|length > 0 %}
    <div class="flashbags animated fadeInRight">
        {% for type, messages in app.session.flashbag.all %}
            {% for message in messages %}
                <div class="alert {{ type ? type : '' }}">
                    <i class="fa fa-close"></i>
                    <p>{{ message }}</p>
                    <i class="background-icon"></i>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
{% endif %}

<main>
    {% block body %}{% endblock %}
</main>

<script src="{{ asset('js/jquery-2.1.4.js') }}"></script>
<script src="{{ asset('styles/semantic/semantic.js') }}"></script>
<script src="{{ asset('js/app.js') }}"></script>
{% block javascripts %}{% endblock %}

<footer>
    <div class="container">
        &copy; {{ 'now'|date('Y') }}
    </div>
</footer>

</body>

</html>
