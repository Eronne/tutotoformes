<!DOCTYPE html>
<html>
<head>
    <!-- Standard Meta -->
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

    <!-- Site Properties -->
    <title>{% block title %}{{ app_name }} - {{ title|default('Accueil') }}{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('styles/semantic/semantic.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('styles/slick/slick.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('styles/slick/slick-theme.css') }}"/>
    {% block stylesheets %}{% endblock %}


    <script src="{{ asset('js/jquery-3.1.0.min.js') }}"></script>
    <script src="{{ asset('styles/semantic/semantic.js') }}"></script>


</head>
<body>

<!-- Following Menu -->
<div class="ui large top fixed hidden menu">
    <div class="ui container">
        {{ render(controller('AppBundle:Default:menu')) }}
    </div>
</div>




<!-- Page Contents -->


{% if app.session.flashbag.peekAll|length > 0 %}
    <div class="ui container">
        <div class="flashbags">
            {% for type, messages in app.session.flashbag.all %}
                {% for message in messages %}
                    <div class="ui {{ type ? type : '' }} floating message">
                        <i class="close icon"></i>
                        <li>{{ message }}</li>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>

{% endif %}

{% block body %}{% endblock %}



{% block javascripts %}{% endblock %}

<footer class="ui inverted vertical footer segment">
    <div class="ui container">
        &copy; {{ 'now'|date('Y') }}

    </div>
</footer>

</body>

</html>
