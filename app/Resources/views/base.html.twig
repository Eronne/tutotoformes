<!DOCTYPE html>
<html>
<head>
    <!-- Standard Meta -->
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

    <!-- Site Properties -->
    <title>{% block title %}{{ app_name }} - {{ title|default('Accueil') }}{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('styles/semantic/semantic.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('styles/slick/slick.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('styles/slick/slick-theme.css') }}"/>
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    {% block stylesheets %}{% endblock %}


</head>
<body>

<header>
    <div class="ui large top fixed hidden menu">
        <div class="ui container">
            {{ render(controller('AppBundle:Default:menu')) }}
        </div>
    </div>
</header>


{% if app.session.flashbag.peekAll|length > 0 %}
    <div class="ui container">
        <div class="flashbags">
            {% for type, messages in app.session.flashbag.all %}
                {% for message in messages %}
                    <div class="ui {{ type ? type : '' }} floating message">
                        <i class="close icon"></i>
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>

{% endif %}

{% block body %}{% endblock %}


<script src="{{ asset('js/jquery-2.1.4.js') }}"></script>
<script src="{{ asset('styles/semantic/semantic.js') }}"></script>
<script src="{{ asset('js/app.js') }}"></script>
{% block javascripts %}{% endblock %}

<footer class="ui inverted vertical footer segment">
    <div class="ui container">
        &copy; {{ 'now'|date('Y') }}

    </div>
</footer>

</body>

</html>
