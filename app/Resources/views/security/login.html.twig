{% embed 'base.html.twig' with {title: 'Connexion / Inscription', subtitle: 'Découvrez vite de nombreux tutoriaux sur notre plateforme !'} %}

    {% block body %}

        {% if error %}
            <div class="flashbags animated fadeInRight">
                <div class="alert info">
                    <i class="fa fa-close"></i>
                    <p>{{ error }}</p>
                    <i class="background-icon"></i>
                </div>
            </div>

        {% endif %}

        <div class="page-body">

            <div class="ui container">


                <div class="ui grid">

                    <div class="eight wide column login">
                        <h2>Connexion</h2>
                        <form class="ui form" action="" method="post">
                            <div class="field">
                                <label>Nom d'utilisateur</label>
                                <input type="text" name="_username" value="{{ last_username|default('') }}">
                            </div>
                            <div class="field">
                                <label>Mot de passe</label>
                                <input type="password" name="_password">
                            </div>
                            <div class="inline field">
                                <div class="ui checkbox">
                                    <input name="_remember_me" type="checkbox" tabindex="0" class="hidden">
                                    <label>Se souvenir de moi</label>
                                </div>
                            </div>
                            <button class="ui button" type="submit">Se connecter</button>
                        </form>
                    </div>
                    <div class="eight wide column register">
                        <h2>Inscription</h2>
                        <form class="ui form" action="{{ path('register') }}" method="post">
                            <div class="field">
                                <label>Nom d'utilisateur</label>
                                <input required type="text" name="_username">
                            </div>
                            <div class="field">
                                <label>Email</label>
                                <input required type="email" name="_email">
                            </div>
                            <div class="two fields">
                                <div class="field">
                                    <label>Mot de passe</label>
                                    <input required type="password" name="_password[0]">
                                </div>
                                <div class="field">
                                    <label>Répéter le mot de passe</label>
                                    <input required type="password" name="_password[1]">
                                </div>
                            </div>
                            <button class="ui button" type="submit">S'inscrire</button>
                        </form>
                    </div>


                </div>
            </div>

        </div>



    {% endblock %}

    {% block  javascripts %}
        <script>
            $('.message .close')
                    .on('click', function() {
                        $(this)
                                .closest('.message')
                                .transition('fade')
                        ;
                    })
            ;
            $('.ui.checkbox')
                    .checkbox()
            ;
        </script>
    {% endblock %}
{% endembed %}